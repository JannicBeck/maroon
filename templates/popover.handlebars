<div class="dropdown pull-left">
	<button class="btn btn-default btn-maroon dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
		<i class="fa fa-chevron-circle-down"></i>
		<span>{{currentMonth}}</span>
	</button>
	<ul class="dropdown-menu maroonMonths" role="menu">
		{{#each months as |month|}}
			<li class="{{month.cssClass}}"><a><time datetime="{{month.isoMonth}}">{{month.month}}</time></a></li>
		{{/each}}
	</ul>
</div>
<div class="dropdown pull-right">
	<button class="btn btn-default btn-maroon dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
		<span>{{currentYear}}</span>
		<i class="fa fa-chevron-circle-down"></i>
	</button>
	<ul class="dropdown-menu maroonYears" role="menu">
		{{#each years as |year|}}
			<li class="{{year.cssClass}}"><a>{{year.year}}</a></li>
		{{/each}}
	</ul>
</div>
<table class="table">
	<thead>
		<tr class="maroonWeekdays">
			{{#each weekdaysMin as |weekday|}}
				<th>{{weekday}}</th>
			{{/each}}
		</tr>
	</thead>
	<tbody class="maroonContent">
		{{#each content as |week|}}
		<tr>
			{{#each week as |date|}}
				<td class="{{date.cssClass}}"><time datetime="{{date.isoDate}}">{{date.date}}</time></td>
			{{/each}}
		</tr>
		{{/each}}

	</tbody>
</table>
