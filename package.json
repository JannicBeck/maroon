{
  "name": "maroon",
  "version": "0.0.1",
  "description": "A revolutionary Calendar written in JavaScript",
  "main": "maroon.js",
  "scripts": {
    "postinstall": "npm test",
    "build": "browserify --standalone popover.js | uglifyjs > ./dist/maroonCalendar.min.js",
    "watch": "watchify --standalone popover.js | uglifyjs > ./dist/maroonCalendar.min.js",
    "test": "node ./test/test.js",
    "test-headless": "./node_modules/zuul/bin/zuul --phantom -- ./test/test.js",
    "test-local": "./node_modules/zuul/bin/zuul --local 9000 -- ./test/*.js",
    "ci": "node ./test/test.js && npm run test-headless"
  },
  "author": "Jannic Beck <jannicbeck@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.0.0",
    "phantomjs": "^2.1.3",
    "tape": "^4.4.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0",
    "zuul": "^3.9.0"
  }
}
